class soda:
    def __init__(self, ing):
        if isinstance(ing,str):
            self.ing = ing
        else:
            self.ing = None
    def show_my_drink(self):
        if self.ing:
            print(f'Газировка и {self.ing}')
        else:
            print('Classic Soda')
drink1 = soda()
drink2 = soda('Refreshing')
drink3 = soda(4)
drink1.show_my_drink()
drink2.show_my_drink()
drink3.show_my_drink()
